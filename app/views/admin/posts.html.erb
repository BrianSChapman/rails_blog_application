<div class="container">
    <h1 class = "text-center">Administrator</h1>
    <%= render "admin/nav_links" %>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Post</th>
                    <th scope="col">Author</th>
                    <th scope="col">Comments</th>
                </tr> 
        </thead>   
        <tbody>
            <th scope="row"><% @posts.each do |post| %></th>
            <tr>
            <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
            <td><%= post.user.name %></td>
            <td><%= pluralize(post..comments.size, "Comment") %></td>
            </tr>
        </tbody>          
    </table>
</div>
